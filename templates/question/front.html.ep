% layout 'sf';
% title 'New Questions';

<article class="questions-front content">
    <header>最新问题</header>

% for my $question (@$questions){
    % my $id = $question->{id};
    <div class="question">
        <div class="question-action">顶踩</div>
        <div class="question-body">
            <div><%= $question->{title} %></div>
            <div>
                <span class="author"><%= $question->{name} %> </span>
                <span>created: <%= readable_time $question->{created} %></span>
            </div>
        </div>
    </div>
%}
</article>
<aside class="sidebar">
</aside>
