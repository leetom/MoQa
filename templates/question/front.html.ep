% layout 'default';
% title 'New Questions';

% for my $question (@$questions){
    <div class="question">
        <div><%= $question->{id} %></div>
        <div><%= $question->{title} %></div>
        <div>Created by: <%= $question->{name} %></div>
        <div>Created on: <%= $question->{created} %></div>
        <div><%= $question->{content} %></div>
    </div>
%}
